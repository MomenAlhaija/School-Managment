@inject IHttpContextAccessor _httpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="~/admin-panel/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/School.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" type="image/x-icon" href="~/template/img/logo.png" />
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <title>Admin Dashboard</title>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">
                <i class="fas fa-user-secret me-2"></i>EduSite
            </div>
            <div class="list-group list-group-flush my-3">
                <a asp-action="Index" asp-controller="Material" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                    <i class="fas fa-book"></i>Materials
                </a>
                <a asp-action="Index" asp-controller="Classes" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                    <i class="fas fa-chalkboard"></i>Classes
                </a>
                <a  asp-controller="Student" asp-action="Index" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                    <i class="fas fa-user-graduate me-2"></i>Students
                </a>
                <a asp-action="Index" asp-controller="Teacher" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                    <i class="fas fa-chalkboard-teacher me-2"></i>Teachers
                </a>
                <a asp-action="Index" asp-controller="User" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                    <i class="fas fa-user"></i>Users
                </a>
                @if ((bool)_httpContextAccessor.HttpContext?.Session.GetInt32("UserId").HasValue)
                {
                    @if ((bool)(_httpContextAccessor.HttpContext?.Session.GetInt32("UserId").HasValue))
                    {
                        <a class="list-group-item list-group-item-action bg-transparent second-text fw-bold" asp-controller="User"
                           asp-action="ResetPassword" asp-route-userId="@_httpContextAccessor.HttpContext?.Session.GetInt32("UserId")">
                            <i class="fas fa-key" style="color:orangered;"></i>Reset Password
                        </a>
                    }
                    <a asp-action="Logout" asp-controller="LogIn" class="list-group-item list-group-item-action bg-transparent second-text fw-bold">
                        <i class="fas fa-sign-out-alt" style="color: red;"></i>Logout

                    </a>
                }

            </div>
        </div>

                    @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
</body>

</html>